# ==============================================
# 한국 프로덕션 환경 설정 (Korea Production)
# ==============================================

# Environment
NODE_ENV="production"
DEPLOY_COUNTRY="korea"

# Database (AWS RDS - Seoul Region)
DATABASE_URL="postgresql://username:password@your-rds-endpoint.ap-northeast-2.rds.amazonaws.com:5432/marriage_matching?schema=public"

# JWT Secrets (프로덕션용 - 반드시 강력한 키로 변경!)
JWT_SECRET="your-production-jwt-secret-key"
JWT_REFRESH_SECRET="your-production-jwt-refresh-secret-key"

# ======================
# Server
# ======================
PORT=3000
CORS_ORIGIN="https://yourdomain.kr,https://www.yourdomain.kr"
SOCKET_IO_CORS_ORIGIN="https://yourdomain.kr"

# ======================
# File Storage (AWS S3 - Seoul Region)
# ======================
STORAGE_TYPE="s3"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-northeast-2"
AWS_S3_BUCKET="marriage-matching-images-kr-prod"

# ======================
# Payment Gateway (한국 우선순위)
# ======================
PAYMENT_MODE="production"

# === 1순위: Toss Payments (한국 1위 간편결제) ===
TOSS_CLIENT_KEY="your-toss-client-key"
TOSS_SECRET_KEY="your-toss-secret-key"
TOSS_ENABLED="true"

# === 2순위: KakaoPay ===
KAKAOPAY_ADMIN_KEY="your-kakaopay-admin-key"
KAKAOPAY_CID="your-kakaopay-cid"
KAKAOPAY_ENABLED="true"

# === 3순위: Naver Pay ===
NAVERPAY_CLIENT_ID="your-naverpay-client-id"
NAVERPAY_CLIENT_SECRET="your-naverpay-client-secret"
NAVERPAY_ENABLED="true"

# === 4순위: Stripe (신용카드) ===
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_ENABLED="true"

# ======================
# Redis (AWS ElastiCache - Seoul)
# ======================
REDIS_HOST="your-elasticache-endpoint.ap-northeast-2.cache.amazonaws.com"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"
REDIS_TLS="true"

# ======================
# OAuth - 한국 주력
# ======================
# Google OAuth
GOOGLE_CLIENT_ID="327030237750-6pcog0le9o7mbd8p7o404tq5848tvsdc.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://yourdomain.kr/api/auth/google/callback"

# Kakao Login (한국 주력)
KAKAO_CLIENT_ID="your-kakao-rest-api-key"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"
KAKAO_CALLBACK_URL="https://yourdomain.kr/api/auth/kakao/callback"

# Naver Login
NAVER_CLIENT_ID="your-naver-client-id"
NAVER_CLIENT_SECRET="your-naver-client-secret"
NAVER_CALLBACK_URL="https://yourdomain.kr/api/auth/naver/callback"

# Apple Login
APPLE_CLIENT_ID="your-apple-service-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_KEY_ID="your-apple-key-id"
APPLE_PRIVATE_KEY_PATH="./keys/AuthKey_xxx.p8"
APPLE_CALLBACK_URL="https://yourdomain.kr/api/auth/apple/callback"

# ======================
# Email Service
# ======================
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.kr"

# ======================
# SMS Service (한국 필수)
# ======================
# Aligo SMS (한국 전용)
ALIGO_API_KEY="your-aligo-api-key"
ALIGO_USER_ID="your-aligo-user-id"
ALIGO_SENDER="your-sender-number"

# Twilio (백업)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-korea-phone-number"

# ======================
# Monitoring
# ======================
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT="production-korea"

# ======================
# Analytics
# ======================
