# ==============================================
# 미국 프로덕션 환경 설정 (USA Production)
# ==============================================

# Environment
NODE_ENV="production"
DEPLOY_COUNTRY="usa"

# Database (AWS RDS - US East Region)
DATABASE_URL="postgresql://username:password@your-rds-endpoint.us-east-1.rds.amazonaws.com:5432/marriage_matching?schema=public"

# JWT Secrets (프로덕션용 - 반드시 강력한 키로 변경!)
JWT_SECRET="your-production-jwt-secret-key"
JWT_REFRESH_SECRET="your-production-jwt-refresh-secret-key"

# ======================
# Server
# ======================
PORT=3000
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"
SOCKET_IO_CORS_ORIGIN="https://yourdomain.com"

# ======================
# File Storage (AWS S3 - US East Region)
# ======================
STORAGE_TYPE="s3"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="marriage-matching-images-us-prod"

# ======================
# Payment Gateway (미국 우선순위)
# ======================
PAYMENT_MODE="production"

# === 1순위: Stripe (미국 표준) ===
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_ENABLED="true"

# === 2순위: Apple Pay (iOS) ===
APPLE_PAY_MERCHANT_ID="merchant.com.yourapp"
APPLE_PAY_ENABLED="true"

# === 3순위: Google Pay (Android) ===
GOOGLE_PAY_MERCHANT_ID="your-google-pay-merchant-id"
GOOGLE_PAY_ENABLED="true"

# === 4순위: PayPal ===
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="live"
PAYPAL_ENABLED="true"

# ======================
# Redis (AWS ElastiCache - US East)
# ======================
REDIS_HOST="your-elasticache-endpoint.us-east-1.cache.amazonaws.com"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"
REDIS_TLS="true"

# ======================
# OAuth - 미국 주력
# ======================
# Google OAuth (미국 주력)
GOOGLE_CLIENT_ID="327030237750-6pcog0le9o7mbd8p7o404tq5848tvsdc.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://yourdomain.com/api/auth/google/callback"

# Apple Login (미국 주력)
APPLE_CLIENT_ID="your-apple-service-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_KEY_ID="your-apple-key-id"
APPLE_PRIVATE_KEY_PATH="./keys/AuthKey_xxx.p8"
APPLE_CALLBACK_URL="https://yourdomain.com/api/auth/apple/callback"

# Facebook Login
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"
FACEBOOK_CALLBACK_URL="https://yourdomain.com/api/auth/facebook/callback"

# ======================
# Email Service
# ======================
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# ======================
# SMS Service
# ======================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-us-phone-number"

# ======================
# Monitoring
# ======================
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT="production-usa"

# ======================
# Analytics
# ======================
GA_TRACKING_ID="your-ga-tracking-id"
