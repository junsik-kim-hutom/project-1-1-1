# Environment
NODE_ENV="development" # development | staging | production

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/marriage_matching?schema=public"

# JWT Secrets (개발용 - 프로덕션에서는 반드시 변경!)
JWT_SECRET="dev-jwt-secret-key-change-in-production"
JWT_REFRESH_SECRET="dev-jwt-refresh-secret-key-change-in-production"

# ======================
# OAuth - Social Login
# ======================

# Google OAuth (글로벌 공통)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/google/callback"

# LINE Login (일본 주력)
LINE_CHANNEL_ID="your-line-channel-id"
LINE_CHANNEL_SECRET="your-line-channel-secret"
LINE_CALLBACK_URL="http://localhost:3000/api/auth/line/callback"

# Yahoo Japan Login (일본)
YAHOO_JAPAN_CLIENT_ID="your-yahoo-japan-client-id"
YAHOO_JAPAN_CLIENT_SECRET="your-yahoo-japan-client-secret"
YAHOO_JAPAN_CALLBACK_URL="http://localhost:3000/api/auth/yahoo/callback"

# Kakao Login (한국)
KAKAO_CLIENT_ID="your-kakao-rest-api-key"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"
KAKAO_CALLBACK_URL="http://localhost:3000/api/auth/kakao/callback"

# Apple Login (글로벌)
APPLE_CLIENT_ID="your-apple-service-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_KEY_ID="your-apple-key-id"
APPLE_PRIVATE_KEY_PATH="./keys/AuthKey_xxx.p8"
APPLE_CALLBACK_URL="http://localhost:3000/api/auth/apple/callback"

# ======================
# Redis (로컬 개발용)
# ======================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
# 프로덕션: AWS ElastiCache, GCP Memorystore 사용 권장

# ======================
# Server
# ======================
PORT=3000
CORS_ORIGIN="http://localhost:*,https://localhost:*"
SOCKET_IO_CORS_ORIGIN="http://localhost:*"

# ======================
# File Storage
# ======================
# 개발 환경: 로컬 저장소 사용 (비용 없음)
STORAGE_TYPE="local" # local | s3 | gcs

# 로컬 저장소 설정 (개발용)
LOCAL_UPLOAD_PATH="./uploads"
LOCAL_BASE_URL="http://localhost:3000/uploads"

# AWS S3 (프로덕션 - 사용 시에만 설정)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="ap-northeast-1" # 도쿄 리전 (일본 타겟)
# AWS_S3_BUCKET="marriage-matching-images-prod"

# Google Cloud Storage (프로덕션 대안)
# GCS_PROJECT_ID="your-gcp-project-id"
# GCS_BUCKET="marriage-matching-images-prod"
# GCS_KEYFILE_PATH="./keys/gcs-keyfile.json"

# ======================
# Payment Gateway
# ======================
# 개발 환경: Mock 결제 사용 (비용 없음)
PAYMENT_MODE="mock" # mock | production

# === 일본 (1순위) ===
# PayPay (일본 최대 모바일 결제 - 시장 점유율 1위)
PAYPAY_API_KEY="your-paypay-api-key"
PAYPAY_API_SECRET="your-paypay-api-secret"
PAYPAY_MERCHANT_ID="your-paypay-merchant-id"

# Stripe (일본 포함 글로벌 - 신용카드)
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Rakuten Pay (일본 - 라쿠텐 생태계)
RAKUTEN_SERVICE_SECRET="your-rakuten-service-secret"
RAKUTEN_MERCHANT_ID="your-rakuten-merchant-id"

# === 한국 (2순위) ===
# Toss Payments (한국 1위 간편결제)
TOSS_CLIENT_KEY="your-toss-client-key"
TOSS_SECRET_KEY="your-toss-secret-key"

# KakaoPay (한국 - 카카오톡 연동)
KAKAOPAY_ADMIN_KEY="your-kakaopay-admin-key"
KAKAOPAY_CID="your-kakaopay-cid"

# Naver Pay (한국)
NAVERPAY_CLIENT_ID="your-naverpay-client-id"
NAVERPAY_CLIENT_SECRET="your-naverpay-client-secret"

# === 미국/글로벌 (3순위) ===
# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # sandbox | live

# Apple Pay (iOS)
APPLE_PAY_MERCHANT_ID="your-apple-pay-merchant-id"

# Google Pay (Android)
GOOGLE_PAY_MERCHANT_ID="your-google-pay-merchant-id"

# ======================
# Email Service (선택)
# ======================
# SendGrid (무료 티어: 100통/일)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourapp.com"

# ======================
# SMS Service (선택)
# ======================
# Twilio (일본/한국/미국 지원)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# ======================
# Analytics (선택)
# ======================
# Google Analytics
GA_TRACKING_ID="your-ga-tracking-id"

# Mixpanel (무료 티어 있음)
MIXPANEL_TOKEN="your-mixpanel-token"

# ======================
# Monitoring (선택)
# ======================
# Sentry (에러 모니터링 - 무료 티어)
SENTRY_DSN="your-sentry-dsn"

# ======================
# Push Notification
# ======================
# Firebase Cloud Messaging (무료)
FCM_SERVER_KEY="your-fcm-server-key"
FCM_PROJECT_ID="your-firebase-project-id"

# ======================
# Map Services
# ======================
# Google Maps API
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Naver Maps API (한국 - 무료 티어)
NAVER_MAP_CLIENT_ID="your-naver-map-client-id"
NAVER_MAP_CLIENT_SECRET="your-naver-map-client-secret"
