<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ system splash screen config -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Flutter window background while engine initializes -->
        <item name="android:windowBackground">@drawable/launch_background</item>

        <!-- System splash (shown before first frame) -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/splash_icon_background</item>
        <item name="android:windowSplashScreenAnimationDuration">200</item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
